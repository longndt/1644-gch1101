<div class="container text-center">
{{!-- table.table.table-bordered>tr*3>th*7 --}}
<table class="table bordered">
   <tr>
      <th class="h2 text text-success" colspan="6">MOVIE LIST</th>
      <th>
         <a class="btn btn-primary" href="/movie/add">Add Movie</a>
      </th>
   </tr>
   <tr>
      <th>Title</th>
      <th>Actor</th>
      <th>Director</th>
      <th>Year</th>
      <th>Poster</th>
      <th>Trailer</th>
      <th>Menu</th>
   </tr>
   {{!-- heach --}}
   {{#each movies }}
   <tr>
      <th>{{ title }}</th>
      <th>{{ actor }}</th>
      <th>{{ director }}</th>
      <th>{{ year }}</th>
      <th>
         <img src="{{ poster }}" width="200" height="250">
      </th>
      <th>
         <iframe src="https://www.youtube.com/embed/{{ trailer }}" 
         width="300" height="200"></iframe>
      </th>
      <th>
         <a class="btn btn-warning" href="/movie/edit/{{_id}}">Edit</a>
         <a class="btn btn-danger" href="/movie/delete/{{_id}}"
         onclick="return confirm('Do you want to delete this movie ?');"
         >Delete</a>
      </th>
   </tr>
   {{/each}}
</table>
</div>
